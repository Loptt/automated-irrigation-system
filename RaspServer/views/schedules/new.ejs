<% include ../partials/header %>

<div class="container">
    <h1>Agrega un nuevo horario para
        <%= device.name %>
    </h1>
    <div class="form-div">
        <form action="/devices/<%= device._id %>/schedules" method="POST">
            <div class="form-group">
                <label for="hour">Hora</label>
                <input class="form-control" type="number" name="hour" placeholder="Hora">
            </div>
            <div class="form-group">
                <label for="minute">Minuto</label>
                <input class="form-control" type="number" name="minute" placeholder="Minuto">
            </div>
            <div class="form-group">
                <label for="duration">Duracion</label>
                <input class="form-control" type="number" name="duration" placeholder="en minutos">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Agregar!</button>
            </div>
        </form>
        <a class="btn btn-light btn-block" href="/devices/<%= device._id %>">Regresar</a>
    </div>
</div>

<% include ../partials/footer %>