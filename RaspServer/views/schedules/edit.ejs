<% include ../partials/header %>

<div class="container">
    <h1>Edita el horario
    </h1>
    <div class="form-div">
        <form action="/devices/<%= device_id %>/schedules/<%= schedule._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="hour">Hora</label>
                <input class="form-control" type="number" name="hour" placeholder="Hora" value="<%= schedule.start.hour %>">
            </div>
            <div class="form-group">
                <label for="minute">Minuto</label>
                <input class="form-control" type="number" name="minute" placeholder="Minuto" value="<%= schedule.start.minute %>">
            </div>
            <div class="form-group">
                <label for="duration">Duracion</label>
                <input class="form-control" type="number" name="duration" placeholder="en minutos" value="<%= schedule.duration %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Guardar</button>
            </div>
        </form>
        <a class="btn btn-light btn-block" href="/devices/<%= device_id %>">Regresar</a>
    </div>
</div>

<% include ../partials/footer %>