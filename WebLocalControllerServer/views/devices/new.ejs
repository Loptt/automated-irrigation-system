<% include ../partials/header %>

<div class="container">
    <h1>Agrega un nuevo dispositivo</h1>
    <div class="form-div">
        <form action="/devices" method="POST">
            <div class="form-group">
                <label for="name">Nombre</label>
                <input class="form-control" type="text" name="device[name]" placeholder="Nombre del dispositivo">
            </div>
            <div class="form-group">
                <label for="pin">Pin de Raspberry</label>
                <input class="form-control" type="number" name="device[pin]" placeholder="Pin">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Agregar</button>
            </div>
        </form>
        <a class="btn btn-light btn-block" href="/devices">Regresar</a>
    </div>
</div>

<% include ../partials/footer %>